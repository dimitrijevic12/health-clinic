<UserControl x:Class="health_clinicClassDiagram.View.HelpUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:health_clinicClassDiagram.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid x:Name="GridKalendar">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="44*" />
                <RowDefinition Height="285*" />
                <RowDefinition Height="59*" />
                <RowDefinition Height="44"/>
            </Grid.RowDefinitions>

            <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="SkyBlue">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="_Početna"></MenuItem>
                <MenuItem Header="_Raspored"></MenuItem>
                <MenuItem Header="_Registrovani pacijenti"></MenuItem>
                <MenuItem Header="_Doktori"></MenuItem>
                <MenuItem Header="_Help"></MenuItem>

            </Menu>

            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Background="SkyBlue" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="113*" />
                    <ColumnDefinition Width="68*" />
                    <ColumnDefinition Width="157*" />

                </Grid.ColumnDefinitions>
                <Button Grid.Column="5" Grid.Row="0" Background="LightSkyBlue" Click="Button_Home">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/home_icon.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="3" Grid.Row="0" Background="LightSkyBlue" Click="Button_Back">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/arrow_back.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </StackPanel>
                </Button>

                <Label Grid.Column="8" Grid.Row="0" FontSize="20" Foreground="White" Name ="labelDateTime" Margin="40,0,0,0">Datum i vreme</Label>
            </Grid>
            <Label x:Name="label" Content="U Detaljnom prikazu rasporeda se nalaze operacije za Zakzaivanje novog pregleda, Zakazivanje pregleda preko &#xD;&#xA;Guest naloga, kao i Brisanje i Izmena postojećih.&#xD;&#xA;&#xD;&#xA;U prozoru Sale za smeštanje se nalaze operacije za smeštanje pacijenata u sale predviđene za to, kao i otpuštanje iz istih.&#xD;&#xA;&#xD;&#xA;U prozoru Raspored nalazi se kalendar sa svim datumima, iz koga biramo datum za koji želimo da pogledamo raspored &#xD;&#xA;prostorija.&#xD;&#xA;&#xD;&#xA;Registrovani pacijenti sadrži listu svih pacijenata, kao i operacije za kreiranje novog naloga, brisanje i izmenu postojećeg.&#xD;&#xA;Takođe sadrži i celokupnu istoriju tretmana za svakog pacijenta.&#xD;&#xA;&#xD;&#xA;Generisanje izveštaja otvara prozor gde se nalaze 2 polja za datum između kojih želimo da se izgeneriše izveštaj&#xD;&#xA;o zauzetosti prostorija.&#xD;&#xA;&#xD;&#xA;Prečice:&#xD;&#xA;CTRL + R DETALJAN RASPORED ZA DANAŠNJI DAN&#xD;&#xA;CTRL + S SALE ZA SMEŠTAJNE&#xD;&#xA;CTRL + K RASPORED&#xD;&#xA;CTRL + P REGISTROVANI PACIJENTI&#xD;&#xA;CTRL + D DOKTORI&#xD;&#xA;CTRL + H HELP&#xD;&#xA;CTRL + I GENERISANJE IZVEŠTAJA" HorizontalAlignment="Left" Margin="10,10,-457.333,-174" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="1248" Height="596" FontSize="18" Grid.RowSpan="4"/>

        </Grid>
    </Grid>
</UserControl>
